<?xml version="1.0" encoding="utf-8"?>

<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swProfileEdit"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="60dp"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="top|center"
        android:layout_width="320dp"
        android:layout_height="280dp"
        android:background="@drawable/shadow_2"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/your_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:fontFamily="@font/paco"
            android:padding="20dp"/>

        <!-- Display Screen-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvUserName"
            android:layout_above="@+id/bEditProfile"

            android:gravity="center">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/paco"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|end"

                    android:text="@string/age" />


                <TextView
                    android:id="@+id/tvUserAge"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/paco"
                    android:layout_marginStart="10dp"
                    android:text="@string/age" />



            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >


                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/paco"
                    android:text="@string/weight"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/tvUserWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/paco"
                    android:layout_marginStart="10dp"
                    android:text="@string/weight" />
            </TableRow>


        </TableLayout>
        <Button
            android:id="@+id/bEditProfile"

            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/edit"
            android:paddingBottom="8dp"

            android:background="@drawable/button_background"
            android:fontFamily="@font/paco"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bLogOut"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"


            android:paddingBottom="8dp"

            android:background="@drawable/button_background"
            android:fontFamily="@font/paco"
            android:text="@string/log_out"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvUserUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvUserName"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="45dp"
            android:fontFamily="@font/paco"
            android:text="@string/username" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="top|center"
        android:layout_width="320dp"
        android:layout_height="280dp"
        android:background="@drawable/shadow_2"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etUserName"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:fontFamily="@font/paco"
            android:background="@null"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/tvEditViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/etUserName"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="45dp"
            android:fontFamily="@font/paco"
            android:text="@string/username" />
        <Button
            android:id="@+id/bSaveProfile"

            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/save"
            android:paddingBottom="8dp"

            android:background="@drawable/button_background"
            android:fontFamily="@font/paco"
            android:textSize="12sp"/>
        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/etUserName"
            android:layout_above="@+id/bSaveProfile"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/etUserName"
            android:layout_above="@+id/bSaveProfile"

            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvAgeEdit"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/paco"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|end"

                    android:text="@string/age" />

                <EditText
                    android:id="@+id/etUserAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/paco"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal" >


                <TextView
                    android:id="@+id/tvWeightEdit"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/paco"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"

                    android:text="@string/weight" />

                <EditText
                    android:id="@+id/etUserWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:fontFamily="@font/paco"/>
            </TableRow>
        </TableLayout>



    </RelativeLayout>

</ViewSwitcher>